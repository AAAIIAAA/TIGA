@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos
@{
    ViewBag.Title = "InformeBalanceGeneral";
    Layout = "~/Views/Shared/_Layout_CuentasSIG.cshtml";

    int? totalCCSS = 0;
}


<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark text-center">Reporte de Cuentas Significativas</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            <div class="row justify-content-center">
                <div class="col-lg-3">
                    Error Tolerable : <br />
                    @Html.TextBox("errorTolerable", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = ViewBag.ErrorTolerable, @type = "number" })
                </div>

                <div class="col-lg-3">
                    Periodo : <br />
                    @Html.DropDownList("periodo", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-lg-2">
                    <br />
                    <button type="submit" class="btn btn-info">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </div>
        }


        <div class="pt-5 card-body">
            <div class="row">
                <div class="col-xl-7 col-lg-7">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="tabla-resumen" width="100%" style="font-size:0.85rem;" >
                            <thead class="table-active">
                                <tr>
                                    <th class="text-center align-middle" style="width: 50%"> Nombre del Macroproceso </th>
                                    <th class="text-center align-middle" style="width: 30%"> Cantidad de Cuentas Significativas </th>
                                    <th class="text-center align-middle" style="width: 20%">  </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SP_BC_RESUMEN_CCSS)
                                {
                                    <tr>
                                        <td style="text-align:left">@item.Macroproceso </td>
                                        <td style="text-align:center"> @item.Cantidad_CCSS </td>
                                        <td style="text-align:center"> Ver </td>
                                    </tr>
                                    totalCCSS += item.Cantidad_CCSS;
                                }
                            </tbody>

                        </table>
                    </div>
                </div>

                <div class="col-xl-5 col-lg-5 ">
                    <div class=" ">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 text-center">
                                <h6 class="m-0 font-weight-bold text-dark">Resumen</h6>
                            </div>

                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col ">
                                        <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">Cantidad de Cuentas Significativas: </div>
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-info" onclick="llamarDetalleCCSS();" data-toggle="modal" data-target="#myModal">
                                            <h5>@totalCCSS</h5>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col text-center">
                        <a class="btn btn-info" style="background-color :lightseagreen" href="@Url.Action("DescargarReporteCCSS", "CuentasSignificativas", new { periodo = ViewBag.PeriodoSelec, errorTolerable = ViewBag.ErrorTolerable})">
                            <i class="fas fa-file-download"></i> Descargar detalle
                        </a>
                    </div>




                </div>
            </div>


        </div>
    </div>
</div>



<!-- MODAL DETALLE CUENTAS SIGNIFICATIVAS -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">DETALLE DE CUENTAS SIGNIFICATIVAS</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="resultado"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tabla-resumen').DataTable({
            ordering: false,
            searching: false,
            "scrollY": "51vh",
            paging: false,
            info: false
        });
    });

    function llamarDetalleCCSS() {
        var laURLDeLaVista = '@Url.Action("PV_DetalleCuentasSignificativas", "CuentasSignificativas")';
        var periodo = '@ViewBag.PeriodoSelec';
        var errorTolerable = '@ViewBag.ErrorTolerable';
            $.ajax({
                cache: false,
                async: true,
                type: "GET",
                url: laURLDeLaVista,
                data: { periodo: periodo, errorTolerable: errorTolerable},
                success: function (response) {
                    $('#resultado').html('');
                    $('#resultado').html(response);
                }
            });
    }

</script>