@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos
@{
    ViewBag.Title = "ReporteMensualCredicorp";
    Layout = "~/Views/Shared/_Layout_Resultado_Auditoria.cshtml";
}


<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark text-center">Reporte Mensual Credicorp</h6>
    </div>

    <div class="card-body">
        @using (Html.BeginForm())
        {
        <div class="row justify-content-center">

            <div class="col-lg-3">
                Fecha Corte Stock: <br />
                <div class="input-group date" id="fecha-fin">
                    <input class="form-control" id="fechaCorte" name="fechaCorte" type="text" value="@ViewBag.FechaCorte" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3">
                Fecha Corte Comentarios: <br />
                <div class="input-group date" id="fecha-inicio">
                    <input class="form-control" id="fechaCorteComentario" name="fechaCorteComentario" type="text" value="@ViewBag.FechaCorteComentario" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3">
                Equipo: <br />
                <select class="form-control" id="equipo" name="equipoSeleccionado">
                    @foreach (var Item in ViewBag.ListaEquipos)
                    {
                        if (Item == ViewBag.EquipoSeleccionado)
                        {
                            <option selected>@Item</option>
                        }
                        else
                        {
                            <option>@Item</option>
                        }
                    }
                </select>
            </div>
            <div class="col-lg-3">
                <br />
                <button type="submit" class="btn btn-info btn-reporte mr-2">
                    <i class="fas fa-filter"></i> Filtrar
                </button>
                <a type="button" class="btn btn-reporte btn-success" href="@Url.Action("DescargarReporteMensualCredicorp", "ResultadoAuditoria", new { fechaCorte = ViewBag.FechaCorte, fechaCorteComentario = ViewBag.FechaCorteComentario, equipoSeleccionado = ViewBag.EquipoSeleccionado})">
                    <i class="fas fa-file-excel"></i> Descargar Reporte
                </a>
            </div>
        </div>
        }

        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover tabla-reporte">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center align-middle"> ID </th>
                        <th class="text-center align-middle"> Proyecto </th>
                        <th class="text-center align-middle"> Nombre del Proyecto </th>
                        <th class="text-center align-middle"> Titulo Observación </th>
                        <th class="text-center align-middle"> Observación </th>
                        <th class="text-center align-middle"> Recomendación </th>
                        <th class="text-center align-middle"> Respuesta </th>
                        <th class="text-center align-middle"> Unidad Responsable </th>
                        <th class="text-center align-middle"> Contacto </th>
                        <th class="text-center align-middle"> Responsable </th>
                        <th class="text-center align-middle"> Fecha de Emisión </th>
                        <th class="text-center align-middle"> Riesgo </th>
                        <th class="text-center align-middle"> Última Actualización </th>
                        <th class="text-center align-middle"> Fecha de Actualización </th>
                        <th class="text-center align-middle"> Fecha de Vencimiento </th>
                        <th class="text-center align-middle"> Estado </th>
                        <th class="text-center align-middle"> Fecha Carga TC </th>
                        <th class="text-center align-middle"> Regulador </th>
                        <th class="text-center align-middle"> Regulado </th>
                        <th class="text-center align-middle"> Email Responsable </th>
                        <th class="text-center align-middle"> Email Contacto </th>
                        <th class="text-center align-middle"> Coordinador </th>
                        <th class="text-center align-middle"> Comentario TeamCentral </th>
                        <th class="text-center align-middle"> Comentario </th>
                        <th class="text-center align-middle"> Riesgo Mitigado </th>
                        <th class="text-center align-middle"> Genera Preocupación </th>
                        <th class="text-center align-middle"> Semáforo </th>
                    </tr>
                </thead>
                <tbody >
                    @foreach (var item in Model.SP_RA_REPORTE_MENSUAL_CREDICORP)
                    {
                    <tr>
                        <td class="text-nowrap"> <span>@item.ID</span> </td>
                        <td class="text-nowrap"> <span>@item.PROYECTO</span> </td>
                        <td class="text-nowrap"> <span>@item.NOMBRE_PROYECTO</span> </td>
                        <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.TITULO_OBSERVACION"> <span>@item.TITULO_OBSERVACION</span> </td>
                        <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.OBSERVACION"> <span>@item.OBSERVACION</span> </td>
                        <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.RECOMENDACION"> <span>@item.RECOMENDACION</span> </td>
                        <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.PRIMERA_RESPUESTA"> <span>@item.PRIMERA_RESPUESTA</span> </td>
                        <td class="text-nowrap"> <span>@item.UNIDAD_RESPONSABLE</span> </td>
                        <td class="text-nowrap"> <span>@item.CONTACTO</span> </td>
                        <td class="text-nowrap"> <span>  </span> </td>
                        <td class="text-center text-nowrap"> <span>@(item.FECHA_EMISIÓN != null ? Convert.ToDateTime(item.FECHA_EMISIÓN).ToShortDateString() : "-") </span> </td>
                        <td class="text-nowrap"> <span>@item.RIESGO</span> </td>
                        <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.ÚLTIMA_RESPUESTA"><span>@item.ÚLTIMA_RESPUESTA</span></td>
                        <td class="text-center text-nowrap"> <span> </span> </td>
                        <td class="text-center text-nowrap"> <span>@(item.FECHA_DE_VENCIMIENTO != null ? Convert.ToDateTime(item.FECHA_DE_VENCIMIENTO).ToShortDateString() : "-") </span> </td>
                        <td class="text-nowrap"> <span>@item.ESTADO</span> </td>
                        <td class="text-nowrap"> <span> </span> </td>
                        <td class="text-nowrap"> <span>@item.EMISOR</span> </td>
                        <td class="text-nowrap"> <span>@item.INFORME</span> </td>
                        <td class="text-nowrap"> <span> </span> </td>
                        <td class="text-nowrap"> <span>@item.EMAIL_CONTACTO</span> </td>
                        <td class="text-nowrap"> <span>@item.COORDINADOR</span> </td>
                        <td class="text-nowrap"> <span> @item.REQUIERE_COMENTARIO </span> </td>
                        <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.ÚLTIMO_COMENTARIO_BCP"> <span>@item.ÚLTIMO_COMENTARIO_BCP</span> </td>
                        <td class="text-nowrap"> <span>@item.RIESGO_MITIGADO</span> </td>
                        <td class="text-nowrap"> <span>@item.GENERA_PREOCUPACION</span> </td>
                        <td class="text-nowrap"> <span>@item.SEMAFORO</span> </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



