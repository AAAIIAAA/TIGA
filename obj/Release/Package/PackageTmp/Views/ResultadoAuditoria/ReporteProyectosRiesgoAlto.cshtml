@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos
@{
    ViewBag.Title = "ReporteProyectosRiesgoAlto";
    Layout = "~/Views/Shared/_Layout_Resultado_Auditoria.cshtml";
}


<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark text-center">Reporte de Proyectos con Riesgo Alto</h6>
    </div>

    <div class="card-body">
        @using (Html.BeginForm())
        {
        <div class="row justify-content-center">
            <div class="col-lg-2">
                Plan Anual: <br />
                <select class="form-control" id="Plan" name="idPlanAnual">
                    @foreach (var Item in Model.DD_PlanAnual)
                    {
                        if (Item.IdPlanAnual == ViewBag.IdPlanAnualSeleccionado)
                        {
                            <option value="@Item.IdPlanAnual" selected>@Item.Nombre</option>
                        }
                        else
                        {
                            <option value="@Item.IdPlanAnual">@Item.Nombre</option>
                        }
                    }
                </select>
            </div>
            <div class="col-lg-2">
                Fecha Inicio (Emisión Plan): <br />
                <div class="input-group date" id="fecha-inicio">
                    <input class="form-control" id="emisionInicio" name="fechaInicio" type="text" value="@ViewBag.FechaInicio" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-lg-2">
                Fecha Fin (Emisión Plan): <br />
                <div class="input-group date" id="fecha-fin">
                    <input class="form-control" id="emisionFin" name="fechaFin" type="text" value="@ViewBag.FechaFin" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3">
                <br />
                <button type="submit" class="btn btn-info btn-reporte mr-2">
                    <i class="fas fa-filter"></i> Filtrar
                </button>
                <a type="button" class="btn btn-reporte btn-success" href="@Url.Action("DescargarReporteProyectosRiesgoAlto", "ResultadoAuditoria", new { fechaInicio = ViewBag.FechaInicio, fechaFin = ViewBag.FechaFin, idPlanAnual = ViewBag.IdPlanAnualSeleccionado })">
                    <i class="fas fa-file-excel"></i> Descargar Reporte
                </a>
            </div>
        </div>
        }

        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover tabla-reporte">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center align-middle"> Código </th>
                        <th class="text-center align-middle"> Nombre del Proyecto </th>
                        <th class="text-center align-middle"> Fecha Inicio Ejecución </th>
                        <th class="text-center align-middle"> Fecha Fin Ejecución </th>
                        <th class="text-center align-middle"> Estado </th>
                        <th class="text-center align-middle"> Calificativo </th>
                        <th class="text-center align-middle"> Emisión de Informe (Último Día) </th>
                        <th class="text-center align-middle"> Emisión de Informe (Ejecución Real) </th>
                    </tr>
                </thead>
                <tbody >
                    @foreach (var item in Model.SP_RA_REPORTE_PROYECTOS_RIESGO_ALTO)
                    {
                    <tr>
                        <td class="text-nowrap"> <span>@item.Codigo</span> </td>
                        <td class="text-nowrap"> <span>@item.Nombre_Proyecto</span> </td>
                        <td class="text-center text-nowrap"> <span>@(item.FechaInicioEjecución != null ? Convert.ToDateTime(item.FechaInicioEjecución).ToShortDateString() : "-") </span> </td>
                        <td class="text-center text-nowrap"> <span>@(item.FechaFinEjecución != null ? Convert.ToDateTime(item.FechaFinEjecución).ToShortDateString() : "-") </span> </td>
                        <td class="text-nowrap"> <span>@item.Estado</span> </td>
                        <td class="text-nowrap"> <span>@item.Calificativo</span> </td>
                        <td class="text-center text-nowrap"> <span>@(item.Emisión_de__Informe__Último_Día_ != null ? Convert.ToDateTime(item.Emisión_de__Informe__Último_Día_).ToShortDateString() : "-") </span> </td>
                        <td class="text-center text-nowrap"> <span>@(item.Emisión_de__Informe__Ejecución_Real_ != null ? Convert.ToDateTime(item.Emisión_de__Informe__Ejecución_Real_).ToShortDateString() : "-") </span> </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



