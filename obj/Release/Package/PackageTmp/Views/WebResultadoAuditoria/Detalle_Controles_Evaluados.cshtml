    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        google.charts.load('current', { packages: ['gauge'] });
        google.charts.setOnLoadCallback(drawChartPie4);
        function drawChartPie4() {
            var dataJson;
            $.ajax({
                url: '@Url.Action("JsonGRAFDetalle_Controles_Evaluados_1")', // to get the right path to controller from TableRoutes of Asp.Net MVC
                dataType: "json", //to work with json format
                type: "POST", //to do a post request
                contentType: 'application/json; charset=utf-8', //define a contentType of your request
                cache: false, //avoid caching results
                data: {}, // here you can pass arguments to your request if you need
                success: function (dataJson) {
                    var arrOutside = new Array();
                    var heading = ["", "PORCENTAJE"];
                    arrOutside[0] = heading;
                    if (dataJson.length > 0) {
                        for (var i = 0; i < dataJson.length; i++) {
                            var arr = [dataJson[i].Año, dataJson[i].Porcentaje] ;
                            arrOutside[i + 1] = arr;
                        }
                        var gdata = new google.visualization.arrayToDataTable(arrOutside);

                        var options = {
                            //width: 1500, height: 180,
                            width: 2000, height: 250,
                            greenFrom: 90, greenTo: 100,
                            yellowFrom: 75, yellowTo: 90,
                            redFrom: 50, redTo: 75,
                        };

                        var chart = new google.visualization.Gauge(document.getElementById('chart_div'));
                        chart.draw(gdata, options);


                        $(window).resize(function () {
                            drawChartPie4();
                        });
                    }
                },



                error: function (xhr) {
                    alert('error' + xhr[0]);
                }
            });
        };
    </script>






