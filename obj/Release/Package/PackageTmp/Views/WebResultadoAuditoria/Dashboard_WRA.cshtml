<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var dataJson;
        $.ajax({
            url: '@Url.Action("JsonGRAFResultado_Auditoria1")', // to get the right path to controller from TableRoutes of Asp.Net MVC
            dataType: "json", //to work with json format
            type: "POST", //to do a post request
            contentType: 'application/json; charset=utf-8', //define a contentType of your request
            cache: false, //avoid caching results
            data: {}, // here you can pass arguments to your request if you need
            success: function (dataJson) {
                var arrOutside = new Array();
                var heading = ["Calificativo", "Total"];
                arrOutside[0] = heading;
                if (dataJson.length > 0) {
                for (var i = 0; i < dataJson.length; i++) {
                    var arr = [dataJson[i].Calificativo, dataJson[i].Total];
                    arrOutside[i + 1] = arr;
                }
                    var gdata = new google.visualization.arrayToDataTable(arrOutside);

                    var options = {
                        title: '2019',
                        //legend: 'right',
                        width: '100%', height: '340',
                        chartArea: { rigth: 4,  width: '100%', height: '250', },
                        //pieHole: 0.10,
                        //colors: ['#0174DF','#e74a3b'],
                         //is3D: true,

                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));
                    chart.draw(gdata, options);
                $(window).resize(function () {
                    drawChart();
                });
                }
            },
            error: function (xhr) {
                //alert('error' + xhr[0]);
            }
        });
    };
</script>



