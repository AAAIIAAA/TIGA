@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos

@{ 
    var listaFunciones = new List<string> { "01-Auditor", "02-Jefe de Auditoría", "03-Gerente Adjunto", "04-Gerente", "05-Practicante" };
    var listaEquipos = new List<string> { "Gestión del Valor", "Procesos de Seguros", "Procesos de Prestación", "Procesos de Pensiones", "Procesos de TI", "Analítica e Innovación en Auditoría" };
    var listaSubgerencias = new List<string> { "Jefferson Rojas Palomino", "Daniela Del Pilar Rodriguez Diaz", "Jorge Noriega", "Jorge Portocarrero Colunge", "Miguel Vetter", "Yanina Mercedes Delfin Lazo" };

}

<html lang="en">
<head>
   

</head>
<body>
    <div class="card shadow mb-2">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h6 class="m-0 font-weight-bold text-dark pt-2">Información para el inicio de sesión</h6>
                <hr />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputUsuario">Usuario</label>
                        <input type="text" class="form-control" id="inputUsuario" name="Usuario" value="@ViewBag.Usuario.Usuario1" required>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-check">
                            @if (ViewBag.Persona.Activo == 1)
                            {
                                <input id="gridCheck" name="Activo" type="checkbox" value="1" checked />
                            }
                            else
                            {
                                <input id="gridCheck" name="Activo" type="checkbox" value="1" />
                            }
                            <input id="gridCheck" type="hidden" value="0" name="Activo" />
                            <label class="form-check-label" for="gridCheck">Activo?</label>
                        </div>
                    </div>
                </div>

                <h6 class="m-0 font-weight-bold text-dark pt-4">Datos Personales</h6>
                <hr />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputNombres">Nombres *</label>
                        <input type="text" class="form-control" id="inputNombres" name="Nombres" value="@ViewBag.Persona.Nombres" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputApellidos">Apellidos *</label>
                        <input type="text" class="form-control" id="inputApellidos" name="Apellidos" value="@ViewBag.Persona.Apellidos" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputNombreSharepoint">Nombre Sharepoint *</label>
                        <input type="text" class="form-control" id="inputNombreSharepoint" name="NombreSharepoint" value="@ViewBag.Persona.NombreSharepoint" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputDNI">Documento de Identidad *</label>
                        <input type="text" class="form-control" id="inputDNI" name="Dni" value="@ViewBag.Persona.Dni" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail">Email *</label>
                        <input type="email" class="form-control" id="inputEmail" name="Email" value="@ViewBag.Persona.Email" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCompañia"> Compañía</label>
                        <select class="form-control" id="IdCompañia" name="IdCompañia" required>
                            @if (ViewBag.Persona.Compañia == null)
                            {
                                <option selected disabled value="">-- Seleccione --</option>
                            }
                            @foreach (var Item in Model.Compañia)
                            {
                                if (Item == ViewBag.Persona.Compañia)
                                {
                                    <option selected value="@Item.IdCompañia">@Item.Nombre</option>
                                }
                                else
                                {
                                    <option value="@Item.IdCompañia">@Item.Nombre</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputFechaIngreso">Fecha de Ingreso *</label>
                        <div class="input-group date" id="fecha-ingreso">
                            <input class="form-control" id="FechaIngreso" name="FechaIngreso" type="text" value="@ViewBag.Persona.FechaIngreso" required />
                            <span class="input-group-append">
                                <span class="input-group-text bg-white">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputMatricula">Matrícula *</label>
                        <input type="text" class="form-control" id="inputMatricula" name="Matrícula" value="@ViewBag.Persona.Matrícula" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputFuncion">Función *</label>
                        <select class="form-control" id="inputFuncion" name="Función" required>
                            @if (ViewBag.Persona.Función == null)
                            {
                                <option selected disabled value="">-- Seleccione --</option>
                            }
                            @foreach (var Item in listaFunciones)
                            {
                                if (Item == ViewBag.Persona.Función)
                                {
                                    <option selected>@Item</option>
                                }
                                else
                                {
                                    <option>@Item</option>
                                }
                            }  
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputEquipo">Equipo *</label>
                        <select class="form-control" id="inputEquipo" name="Equipo" required>
                            @if (ViewBag.Persona.Equipo == null)
                            {
                                <option selected disabled value="">-- Seleccione --</option>
                            }
                            @foreach (var Item in listaEquipos)
                            {
                                if (Item == ViewBag.Persona.Equipo)
                                {
                                    <option selected>@Item</option>
                                }
                                else
                                {
                                    <option>@Item</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputSubgerencia">SubGerencia *</label>
                        <select class="form-control" id="inputSubgerencia" name="SubGerencia" required>
                            @if (ViewBag.Persona.SubGerencia == null)
                            {
                                <option selected disabled value="">-- Seleccione --</option>
                            }
                            @foreach (var Item in listaSubgerencias)
                            {
                                if (Item == ViewBag.Persona.SubGerencia)
                                {
                                    <option selected>@Item</option>
                                }
                                else
                                {
                                    <option>@Item</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group text-center pt-3">
                    <button type="submit" class="btn btn-info btn-group-toggle" style="background-color :lightseagreen">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                </div>
            }
        </div>
    </div>
</body>
</html>



<script>

    $(function () {
        $('#fecha-ingreso').datepicker({
            format: 'dd/mm/yyyy'
        });
        $('#fecha-salida').datepicker({
            format: 'dd/mm/yyyy'
        });
    });

</script>



