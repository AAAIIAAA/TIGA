@model WebTIGA.Models.DAC_ScriptsContinua

@{
    ViewBag.Title = "RegistrarScript";
    Layout = "~/Views/Shared/_Layout_Auditoria_Continua.cshtml";
    int? anio = ViewBag.fecha;
    var sel = "selected";
    

}
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstr apcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-dark">REGISTRAR SCRIPTS</h6>
            </div>
           

                <div class="card-body card-block border-bottom-light">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                       
                    <div class="form-row">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-sm-6">

                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Codigo Script: </label>
                                <div class="col-md-8">

                                    @Html.EditorFor(model => model.Código_Script, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Código_Script, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Año: </label>
                                <div class="col-md-8">

                                    <select @Html.TextBox("Año", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Año" })>


                                        @for (int i = 2017; i <= DateTime.Today.Year; i++)
                                        {

                                            if (i ==2021)
                                            {
                                                <option @sel>@i</option>
                                            }
                                            else
                                            {
                                                <option>@i</option>
                                            }
                                        }

                                    </select>

                                </div>
                            </div>

                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Negocio: </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Negocio, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Negocio, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Nombre Script : </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Nombre_Script, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nombre_Script, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Script Abreviado: </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Script_Abreviado, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Script_Abreviado, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Descripción de script: </label>
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.Descripción_de_Script, new {  @class = "form-control"  })
                                    @*@Html.EditorFor(model => model.Descripción_de_Script, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @Html.ValidationMessageFor(model => model.Descripción_de_Script, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Fuente: </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Fuente, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Fuente, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Tipo de Script: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("idTipScript", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idTipScript, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Gestor Responsable: </label>
                                <div class="col-md-8">
                                    <select @Html.TextBox("Gestor_Responsable", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Gestor_Responsable" })>
                                        <option @sel>Leonardo Eyzaguirre</option>
                                        <option>Alvaro Candela</option>
                                    </select>

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Ruta: </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Ruta, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ruta, "", new { @class = "text-danger" })

                                </div>
                            </div>

                        </div>


                        <div class="col-sm-6">


                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Gerente Adjunto: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("idGerenteAdjunto", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idGerenteAdjunto, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Auditor: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("idAuditor", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idAuditor, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Area Auditada: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("idAreaAuditada", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idAreaAuditada, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Contacto: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("idContactoAuditado", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idContactoAuditado, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Fase 1: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("Fase_1", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Fase_1, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Fase 2: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("Fase_2", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Fase_2, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Fase 3: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("Fase_3", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Fase_3, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Fase 4: </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("Fase_4", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Fase_4, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Ejecución de Script: </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Ejecución_de_Script, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ejecución_de_Script, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group row px-lg-5">
                                <label for="staticUsuario" class="col-md-3 col-form-label" style="color:black;font-weight:bold;">Meses de Análisis: </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Cantidad_de_Meses_de_análisis, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cantidad_de_Meses_de_análisis, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>


                    </div>

                        
                        <div class="form-group text-center">
                            <input type="submit" value="Agregar" class="btn btn-info btn-group-toggle" style="background-color :lightseagreen" data-toggle="modal" data-target="#logoutModal" />
                            <a href="@Url.Action("AdministrarScript","WebAuditoriaContinua")" class="btn btn-secondary" id="btnReturn">Retornar</a>
                        </div>
                    }

                 

                </div>
        </div>
     </div>

</body>
</html>