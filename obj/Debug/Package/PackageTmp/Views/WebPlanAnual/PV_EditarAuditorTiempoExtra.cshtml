@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="text" name="ID_Usuario" value="@ViewBag.AuditorTiempoExtraSel.ID_Usuario" hidden>
    <input type="text" name="ID_Auditor_Tiempo_Extra" value="@ViewBag.AuditorTiempoExtraSel.ID_Auditor_Tiempo_Extra" hidden>
    <input type="text" name="idPlanAnual" value="@ViewBag.IdPlanAnual" hidden>

    <div class="form-group">
        <label>Auditor: </label>
        <input type="text" class="form-control form-control-sm" value="@(ViewBag.AuditorTiempoExtraSel.Usuario.Persona.Nombres.Trim() + " " + ViewBag.AuditorTiempoExtraSel.Usuario.Persona.Apellidos.Trim())" disabled>
    </div>

    <div class="form-group">
        <label>Actividad: </label>
        <select class="form-control form-control-sm" name="ID_Tipo_Tiempo_Extra" required>
            @foreach (var Item in Model.DPA_Tipo_Tiempo_Extra)
            {
                <option value="@Item.ID_Tipo_Tiempo_Extra" @(Item.ID_Tipo_Tiempo_Extra == ViewBag.AuditorTiempoExtraSel.ID_Tipo_Tiempo_Extra ? "selected" : "")>@Item.Tipo</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Fecha Inicio: </label>
        <div class="input-group date" id="fecha-inicio">
            <input class="form-control form-control-sm" id="inputFechaInicio" name="Fecha_Inicio" value="@Convert.ToDateTime(ViewBag.AuditorTiempoExtraSel.Fecha_Inicio).ToString("dd/MM/yyyy")" type="text" required />
            <span class="input-group-append">
                <span class="input-group-text bg-white">
                    <i class="fa fa-calendar"></i>
                </span>
            </span>
        </div>
    </div>

    <div class="form-group">
        <label>Fecha Fin: </label>
        <div class="input-group date" id="fecha-fin">
            <input class="form-control form-control-sm" id="inputFechaFin" name="Fecha_Fin" value="@Convert.ToDateTime(ViewBag.AuditorTiempoExtraSel.Fecha_Fin).ToString("dd/MM/yyyy")" type="text" required />
            <span class="input-group-append">
                <span class="input-group-text bg-white">
                    <i class="fa fa-calendar"></i>
                </span>
            </span>
        </div>
    </div>

    <div class="form-group text-center pt-3">
        <button type="submit" class="btn font-weight-normal btn-info btn-group-toggle">
            <i class="fas fa-save"></i> Guardar
        </button>
    </div>
}

<script type="text/javascript" class="init">
    $('#fecha-inicio').datepicker({
        format: 'dd/mm/yyyy'
    });
    $('#fecha-fin').datepicker({
        format: 'dd/mm/yyyy'
    });
</script>











