@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos
@{
    ViewBag.Title = "ReporteGeneral";
    Layout = "~/Views/Shared/_Layout_Resultado_Auditoria.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark text-center">Reporte de Controles SOX</h6>
    </div>

    <div class="card-body">
        @using (Html.BeginForm())
        {
        <div class="row justify-content-center">

            <div class="col-lg-3">
                Fecha Inicio: <br />
                <div class="input-group date" id="fecha-inicio">
                    <input class="form-control" id="emisionInicio" name="emisionInicio" type="text" value="@ViewBag.EmisionInicio" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>

            <div class="col-lg-3">
                Fecha Fin: <br />
                <div class="input-group date" id="fecha-fin">
                    <input class="form-control" id="emisionFin" name="emisionFin" type="text" value="@ViewBag.EmisionFin" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>            
            <div class="col-lg-3">
                <br />
                <button type="submit" class="btn btn-info btn-reporte mr-2">
                    <i class="fas fa-filter"></i> Filtrar
                </button>
                <a type="button" class="btn btn-reporte btn-success" href="@Url.Action("DescargarReporteSOX", "ResultadoAuditoria", new { emisionInicio = ViewBag.EmisionInicio, emisionFin = ViewBag.EmisionFin})">
                    <i class="fas fa-file-excel"></i> Descargar Reporte
                </a>
            </div>
        </div>
        }


        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover display tabla-reporte">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center align-middle"> Referencia del Proceso </th>
                        <th class="text-center align-middle"> Año </th>
                        <th class="text-center align-middle"> Descripción del Proceso </th>
                        <th class="text-center align-middle"> N° Riesgo </th>
                        <th class="text-center align-middle"> Causa </th>
                        <th class="text-center align-middle"> Evento </th>
                        <th class="text-center align-middle"> Consecuencia </th>
                        <th class="text-center align-middle"> Categoría del Riesgo </th>
                        <th class="text-center align-middle"> Tipo de Riesgo </th>
                        <th class="text-center align-middle"> Impacto (en US$ miles) </th>
                        <th class="text-center align-middle"> Frecuencia (veces por año) </th>
                        <th class="text-center align-middle"> IFC </th>
                        <th class="text-center align-middle"> N° Control </th>
                        <th class="text-center align-middle"> Descripción del Control </th>
                        <th class="text-center align-middle"> Control Clave </th>
                        <th class="text-center align-middle"> Control Sox </th>
                        <th class="text-center align-middle"> Tipo de Controles </th>
                        <th class="text-center align-middle"> Naturaleza del Control </th>
                        <th class="text-center align-middle"> Evaluación del Control </th>
                        <th class="text-center align-middle"> Impacto </th>
                        <th class="text-center align-middle"> Frecuencia </th>
                        <th class="text-center align-middle"> IFC </th>
                        <th class="text-center align-middle"> Referencias del Proceso Anterior </th>
                        <th class="text-center align-middle"> Clasificación del Riesgo del Trabajo </th>
                        <th class="text-center align-middle"> Subgerencia </th>
                        <th class="text-center align-middle"> Finalizado? </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SP_RA_REPORTE_SOX)
                    {
                        <tr>
                            <td class="text-nowrap"> <span>@item.Referencia_del_Proceso</span> </td>
                            <td class="text-nowrap"> <span>@item.Año</span> </td>
                            <td class="text-nowrap"> <span>@item.Descripción_del_Proceso</span> </td>
                            <td class="text-nowrap"> <span>@item.N__Riesgo</span> </td>
                            <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.Causa"> <span>@item.Causa</span> </td>
                            <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.Evento"> <span>@item.Evento</span> </td>
                            <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.Consecuencia"> <span>@item.Consecuencia</span> </td>
                            <td class="text-nowrap"> <span>@item.Categoría_del_Riesgo</span> </td>
                            <td class="text-nowrap"> <span>@item.Tipo_de_Riesgo</span> </td>
                            <td class="text-nowrap"> <span>@item.Impacto</span> </td>
                            <td class="text-nowrap"> <span>@item.Frecuencia</span> </td>
                            <td class="text-nowrap"> <span>@item.IFC__en_US__miles_</span> </td>
                            <td class="text-nowrap"> <span>@item.N__Control</span> </td>
                            <td class="ellipsis" data-toggle="tooltip" data-placement="bottom" title="@item.Descripción_del_Control"><span>@item.Descripción_del_Control</span></td>
                            <td class="text-nowrap"> <span>@item.Control_Clave</span> </td>
                            <td class="text-nowrap"> <span>@item.Control_Sox</span> </td>
                            <td class="text-nowrap"> <span>@item.Tipo_de_Controles</span> </td>
                            <td class="text-nowrap"> <span>@item.Naturaleza_del_Control</span> </td>
                            <td class="text-nowrap"> <span>@item.Evaluacion_del_Control</span> </td>
                            <td class="text-nowrap"> <span>@item.Impacto2</span> </td>
                            <td class="text-nowrap"> <span>@item.Frecuencia2</span> </td>
                            <td class="text-nowrap"> <span>@item.IFC__en_US__miles_2</span> </td>
                            <td class="text-nowrap"> <span>@item.Referencia_del_Proceso_anterior</span> </td>
                            <td class="text-nowrap"> <span>@item.Clasificación_del_Riesgo_de_Trabajo</span> </td>
                            <td class="text-nowrap"> <span>@item.SubGerencia</span> </td>
                            <td class="text-nowrap"> <span>@item.Finalizado_</span> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



