@model WebTIGA.Models.ContenedorModelos

@{
    ViewBag.Title = "CrearCuentaProyecto";
    Layout = "~/Views/Shared/_Layout_CuentasSIG.cshtml";

}

<div class="col-lg-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-dark text-center">EDITAR RELACIÓN CUENTA CONTABLE - PROYECTO</h6>
        </div>
        <br />

        <div class="card-body card-block border-bottom-light">
            <div class="container">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row justify-content-md-center">
                            <label for="staticCuenta" class="col-md-3 col-form-label" style="font-weight:bold;">Número de Cuenta: </label>
                            <div class="col-md-6">
                                <input class="form-control" id="Num_Cuenta" name="Num_Cuenta" type="text" value="@ViewBag.NumCuenta" />
                            </div>
                        </div>
                        <br />

                        <div class="form-group row justify-content-md-center">
                            <label for="staticCuenta" class="col-md-3 col-form-label" style="font-weight:bold;">Plan Anual: </label>
                            <div class="col-md-6">
                                <select class="form-control" id="ID_Plan" name="ID_Plan" style="text-transform:uppercase" onchange="callChangeFunc(@ViewBag.Id, this.value)">
                                    @foreach (var Item in Model.DD_PlanAnual)
                                    {
                                        if (Item.IdPlanAnual == ViewBag.IdPlan)
                                        {
                                            <option value="@Item.IdPlanAnual" selected>@Item.Nombre</option>
                                        }
                                        else
                                        {
                                            <option value="@Item.IdPlanAnual">@Item.Nombre</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <br />

                        <div class="form-group row justify-content-md-center">
                            <label for="staticCuenta" class="col-md-3 col-form-label" style="font-weight:bold;">Código del Proyecto: </label>
                            <div class="col-md-6">
                                <select class="form-control" id="ID_Proyecto" name="ID_Proyecto">
                                    @if (@ViewBag.IdProyecto != null)
                                    {
                                        <option value="@ViewBag.IdProyecto" selected>@ViewBag.CodProyecto</option>
                                    }
                                    @foreach (var Item in Model.SP_BC_PROYECTO_PLAN)
                                    {                                        
                                        <option value="@Item.IdProyecto">@Item.Codigo</option>                                        
                                    }
                                </select>
                            </div>
                        </div>
                        <br />

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-info btn-group-toggle" style="background-color :lightseagreen">
                                Editar
                            </button>
                            <a href="@Url.Action("AdministracionCuentas", "CuentasSignificativas")" class="btn btn-secondary" id="btnReturn">
                                Cancelar
                            </a>
                        </div>



                    </div>

                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" class="init">

    $(document).ready(function () {
        if ('@ViewBag.Alerta' == "edit-error") {
            Swal.fire({
                title: 'Creación Fallida',
                text: 'El registro ya se encuentra en la base de datos.',
                icon: 'error',
                confirmButtonColor: 'lightseagreen'
            })
        }
    });

    function callChangeFunc(val, val2) {
        window.location.href = "../CuentasSignificativas/EditarCuentaProyecto?id=" + val + "&idPlan=" + val2;
    }

</script>