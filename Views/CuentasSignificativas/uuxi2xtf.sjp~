
@{
    ViewBag.Title = "UploadFile";
    ViewBag.MensajeLoad = "Visible";
    Layout = "~/Views/Shared/_Layout_CuentasSig.cshtml";
    var sel = "selected";
    int? anio = DateTime.Today.Year;
}

<h2>Carga de Información | Cuentas Significativas</h2>

@using (Html.BeginForm("UploadFile", "CuentasSignificativas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    <a>Tipo: </a>
    <select @Html.TextBox("Tipo", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Tipo" })>
        <option>EEFF</option>
        <option>BC</option>
    </select>
    <br />
    <a>Año: </a>
    <select @Html.TextBox("Anio", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Anio" })>
        @for (int i = 2017; i <= DateTime.Today.Year; i++)
        {
            if (i == anio)
            {
                <option @sel>@i</option>
            }
            else
            {
                <option>@i</option>
            }
        }
    </select>
    <br />
    <a>Mes: </a>
    <select @Html.TextBox("Mes", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Mes" })>
        @for (int i = 1; i <= 12; i++)
        {
            <option>@i</option>
        }
    </select>
    <br />
    <a>Empresa: </a>
    <select @Html.TextBox("Empresa", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Empresa" })>
        <option>BCPacificoSeguros</option>
        <option>PRIMA</option>
    </select>
    <br />
    <div>
        @Html.TextBox("file", "", new { type = "file" }) <br />
        <br />
        <input type="submit" value="Upload" />
        @ViewBag.Message
        <img src="/images/funny.gif" alt="Funny image">
    </div>
}