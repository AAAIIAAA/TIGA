@using WebTIGA;

@model WebTIGA.Models.ContenedorModelos
@{
    ViewBag.Title = "Administrador_Rotacion";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}

<style>
    #btn-icon {
        background: none;
        color: inherit;
        border: none;
        padding: 0;
        font: inherit;
        cursor: pointer;
        outline: inherit;
    }
</style>



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark text-center">ADMINISTRADOR DE ROTACIÓN DE USUARIOS</h6>
    </div>

    <div class="card-body">
        <div class="col-lg-12">
            <div class="card-body">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="row">
                                <h6 class="m-0 font-weight-bold ">USUARIO:</h6>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-lg-8">
                                    <select class="form-control" id="dropUsuario" onchange="callChangeFunc(this.value)">
                                        @foreach (var Item in Model.View_AU_Administrador_Usuarios)
                                        {
                                            if (Item.IdPersona == ViewBag.IdPersonaSelec)
                                            {
                                                <option value="@Item.IdPersona" selected>@Item.Nombre</option>
                                            }
                                            else
                                            {
                                                <option value="@Item.IdPersona">@Item.Nombre</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-4">
                                    <button class="btn btn-info" style="background-color :lightseagreen" onclick="llamarAgregarRotacion(@ViewBag.IdPersonaSelec);" data-toggle="modal" data-target="#modalAgregarRotacion">
                                        <i class="fas fa-plus"></i> Agregar rotación
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="display nowrap" id="table-rotacion" width="100%">
                    <thead>
                        <tr>
                            <th>Cargo</th>
                            <th>Planilla</th>
                            <th>Matrícula</th>
                            <th>Equipo</th>
                            <th>Jefe Directo</th>
                            <th>Fecha de Ingreso</th>
                            <th>Fecha de Salida</th>
                            <th style="width:280px;"></th>
                        </tr>
                    <thead>
                    <tbody>
                        @foreach (var item in Model.SP_AU_Rotacion_Usuario)
                        {
                            <tr>
                                <td>@item.Cargo</td>
                                <td>@item.Planilla</td>
                                <td>@item.Matrícula</td>
                                <td>@item.Equipo</td>
                                <td>@item.Jefe_Directo</td>
                                @if (item.FechaIngreso != null)
                                {
                                    <td>@Convert.ToDateTime(item.FechaIngreso).ToShortDateString()</td>
                                }
                                else
                                {
                                    <td>@item.FechaIngreso</td>
                                }
                                @if (item.FechaSalida != null)
                                {
                                    <td>@Convert.ToDateTime(item.FechaSalida).ToShortDateString()</td>
                                }
                                else
                                {
                                    <td>@item.FechaSalida</td>
                                }
                                <td class="text-center">
                                    <div class="btn-group">
                                        <button id="btn-icon" class="pr-3" onclick="llamarEditarRotacion(@item.IdRotacion);" data-toggle="modal" data-target="#modalEditarRotacion" title="Editar">
                                            <i class="fas fa-edit text-warning"></i>
                                        </button>
                                        <button id="btn-icon" onclick="llamarEliminarRotacion(@item.IdRotacion);" data-toggle="modal" data-target="#modalEliminarRotacion" title="Eliminar">
                                            <i class="fas fa-trash-alt text-danger"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>

                        }
                    <tbody>
                </table>
            </div>

        </div>

    </div>
</div>

@*MODAL AGREGAR ROTACION*@
<div class="modal fade" id="modalAgregarRotacion" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl">
        Modal content
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">AGREGAR ROTACIÓN DE USUARIO</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="resultado-agregar-rotacion"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@*MODAL EDITAR ROTACION*@
<div class="modal fade" id="modalEditarRotacion" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl">
        Modal content
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">EDITAR ROTACIÓN DE USUARIO</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="resultado-editar-rotacion"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@*MODAL ELIMINAR ROTACION*@
<div class="modal fade" id="modalEliminarRotacion" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar rotación de usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("EliminarRotacion", "AdministradorUsuarios", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    ¿Estás seguro que deseas eliminar esta información? Esta operación es irreversible.
                    <input id="inputEliminarRotacion" name="idRotacion" type="text" hidden />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" style="background-color :lightseagreen">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            }
        </div>
    </div>
</div>


<script type="text/javascript" class="init">
    function llamarAgregarRotacion(id) {
        var laURLDeLaVista = '@Url.Action("PV_AgregarRotacion", "AdministradorUsuarios")';
            $.ajax({
                cache: false,
                async: true,
                type: "GET",
                url: laURLDeLaVista,
                data: { idPersona: id},
                success: function (response) {
                    $('#resultado-agregar-rotacion').html('');
                    $('#resultado-agregar-rotacion').html(response);
                }
            });
    }

    function llamarEditarRotacion(id) {
        var laURLDeLaVista = '@Url.Action("PV_EditarRotacion", "AdministradorUsuarios")';
            $.ajax({
                cache: false,
                async: true,
                type: "GET",
                url: laURLDeLaVista,
                data: { idRotacion: id},
                success: function (response) {
                    $('#resultado-editar-rotacion').html('');
                    $('#resultado-editar-rotacion').html(response);
                }
            });
    }

    function llamarEliminarRotacion(idRotacion) {
        document.getElementById("inputEliminarRotacion").setAttribute('value', idRotacion);
    }

    function callChangeFunc(val) {
        window.location.href = "../AdministradorUsuarios/Administrador_Rotacion?idPersona=" + val;
    }

    $(document).ready(function () {
        $('#table-rotacion').DataTable({
            dom: 'Bfrtip',
            "ordering": false,
            buttons: [
                'excelHtml5',
            ]
        });

        if ('@ViewBag.Alerta' == "creado") {
            Swal.fire({
                title: 'Creación Exitosa',
                text: 'Se ha agregado la rotación del usuario correctamente',
                icon: 'success',
                showConfirmButton: false,
                timer: 2000
            });
        }
        else if ('@ViewBag.Alerta' == "editado") {
            Swal.fire({
                title: 'Edición Exitosa',
                text: 'Se ha editado la rotación del usuario correctamente',
                icon: 'success',
                showConfirmButton: false,
                timer: 2000
            });
        }
        else if ('@ViewBag.Alerta' == "eliminado") {
            Swal.fire({
                title: 'Rotación Eliminada',
                text: 'Se ha eliminado la rotación del usuario de la base de datos',
                icon: 'success',
                showConfirmButton: false,
                timer: 2000
            });
        }
        else if ('@ViewBag.Alerta' == "error") {
            Swal.fire({
                title: 'Error',
                text: 'Ha ocurrido un error en la operación, inténtelo nuevamente',
                icon: 'error',
                confirmButtonColor: 'lightseagreen'
            });
        }
    });
</script>
