@model WebTIGA.Models.ContenedorModelos

@{
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
    ViewBag.Title = "Edit";
    string modulo = ViewBag.modulo;
    string nombre = ViewBag.userN;

}
<html>
    <head>

        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstr apcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
        <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


    </head>
    <body>

        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-dark">ADMINISTRADOR DE ROLES</h6>
                </div>
                <div class="card-body card-block border-bottom-light">

                    <div class="container">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h6 class="m-0 font-weight-bold text-dark">EDITAR ROL DE USUARIO</h6>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group row">
                                    <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Usuario: </label>
                                    <div class="col-md-10">
                                        <select class="form-control" style="cursor: not-allowed;color:black;" disabled="disabled">
                                            @foreach (var Item in Model.Usuario)
                                            {
                                                <option selected value="@Item.IdUsuario">@Item.Persona.Nombres @Item.Persona.Apellidos</option>
                                            }
                                        </select>
                                      

                                    </div>
                                </div>
                                <br>
                                <div class="form-group row">
                                    <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Modulo: </label>
                                    <div class="col-md-10">
                                        <select class="form-control" style="cursor: not-allowed;color:black;" disabled="disabled">
                                            @foreach (var Item in Model.UsuarioModuloRol)
                                            {
                                                <option selected value="@Item.ID">@Item.ModuloRol.Modulo.Nombre</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <br>

                                <div class="form-group row">
                                    <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Rol: </label>
                                    <div class="col-md-10">

                                        @Html.DropDownList("IdRol", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })

                                    </div>
                                </div>


                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-danger fade show" role="alert">
                                        <strong>ERROR : </strong> @ViewBag.Message
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>


                                }
                                <br>

                                <div class="form-group text-center">
                                    <input type="submit" value="Guardar" class="btn btn-info btn-group-toggle" style="background-color :lightseagreen" />
                                    <a href="@Url.Action("Administrador_U","AdministradorUsuarios")" class="btn btn-secondary" id="btnReturn">Retornar</a>

                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </body>

</html>