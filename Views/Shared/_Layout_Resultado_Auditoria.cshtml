        $('#fecha-inicio').datepicker({
            format: 'dd/mm/yyyy'
        });
        $('#fecha-fin').datepicker({
            format: 'dd/mm/yyyy'
        });        
    });

    $(document).ready(function () {
        $('.tabla-reporte').dataTable({
            "dom": "<'row pb-1'<'col-sm-12 col-md-3'><'col-sm-12 col-md-6 text-center'i><'col-sm-12 col-md-3'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-12 col-md-5'><'col-sm-12 col-md-7'p>>",
            "ordering": false,
            "searching": true,
            "paging": false,            
            "scrollX": true,
            "scrollY": "50vh",
            "language": {
                "zeroRecords": "No hay datos disponibles para los filtros seleccionados",
                "info": "Vista previa de los 100 primeros registros (_MAX_ registros obtenidos)",
                "infoEmpty": "No hay registros disponibles",
                "infoFiltered": "(filtrado de _MAX_ registros)",
                "search": "Buscar:"
            }
        });
    });

</script>