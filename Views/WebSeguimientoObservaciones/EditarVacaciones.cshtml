@model WebTIGA.Models.ContenedorModelos

@{
    Layout = "~/Views/Shared/_Layout_Vacaciones.cshtml";
    ViewBag.Title = "EditarVacaciones";
}




<html>
<head>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstr apcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


</head>
<body>
    <div class="row">

        <div class="col-lg-12">
            <div class="card text-white bg-secondary mb-3">
                <div class="card-header"><strong>EDITAR VACACIONES</strong>@Html.ActionLink("Regresar", "DetalleIndividual", new { id = ViewBag.id }, new { @class = "btn btn-info ", @style = "float: right;" })</div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="row">

                            <div class="col-lg-6">



                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header" @*style="background-color: goldenrod;color: white;"*@>
                <h6 class="m-0 font-weight-bold text-dark">EDITAR VACACIONES</h6>
            </div>
            <div class="card-body card-block border-bottom-light">

                <div class="container">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h6 class="m-0 font-weight-bold text-dark">EDITAR ROL DE USUARIO</h6>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Tipo: </label>
                            <div class="col-md-10">



                                <select @Html.TextBox("Tipo", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Tipo" })>
                                    <option selected>@ViewBag.Tipo</option>
                                    <option>Ejecutado</option>
                                    <option>Planificado</option>
                                    <option>GDH Sistema</option>
                                </select>




                            </div>
                        </div>
                        <br>
                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Fecha de Inicio: </label>
                            <div class="col-md-10">

                                @Html.TextBox("FechaInicio", null, new { style = "text-transform:uppercase", @class = "form-control", value = "FechaInicio", id = "datepicker" })
                                @Html.ValidationMessageFor(model => model.TD_VacacionesRegistro, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <script>
                            $("#datepicker").datepicker({
                                format: 'yyyy-mm-dd',
                                uiLibrary: 'bootstrap4'
                            });
                        </script>
                        <br>
                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Fecha Fin: </label>
                            <div class="col-md-10">
                                @Html.TextBox("FechaFin", null, new { style = "text-transform:uppercase", @class = "form-control", value = "FechaFin", id = "datepicker2" })
                                @Html.ValidationMessageFor(model => model.TD_VacacionesRegistro, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <script>
                            $("#datepicker2").datepicker({
                                format: 'yyyy-mm-dd',
                                uiLibrary: 'bootstrap4'

                            });
                        </script>
                        <br>

                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Periodo: </label>
                            <div class="col-md-10">
                                @Html.TextBox("Periodo", null, new { style = "text-transform:uppercase", @class = "form-control", value = "Periodo" })
                                @Html.ValidationMessageFor(model => model.TD_VacacionesRegistro, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <br>
                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Usuario: </label>
                            <div class="col-md-10">
                                <select class="form-control" style="text-transform:uppercase ;cursor: not-allowed;color:black;" disabled="disabled">
                                    @foreach (var Item in Model.Usuario)
                                    {
                                        <option selected value="@Item.IdPersona">@Item.Persona.Nombres @Item.Persona.Apellidos</option>
                                    }
                                </select>



                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Descripcion: </label>
                            <div class="col-md-10">
                                @Html.TextArea("Descripción", null, new { style = "text-transform:uppercase", @class = "form-control", value = "Descripción" })
                                @Html.ValidationMessageFor(model => model.TD_VacacionesRegistro, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <br>
                        @if (@ViewBag.Tipo == "Ejecutado")
                        {

                            <div class="form-group">

                                <div class="custom-control custom-checkbox small">
                                   

                                </div>
                            </div>

                        }
                        else
                        {

                            <div class="form-group">

                                <div class="custom-control custom-checkbox small">
                                    @Html.RadioButton("Ejecutado", 1, new { @class = "custom-control-input", @type = "checkbox", @id = "customCheck", value = "Ejecutado" })
                                    @Html.ValidationMessageFor(model => model.TD_VacacionesRegistro, "", new { @class = "text-danger" })

                                    <label class="custom-control-label" for="customCheck">Marcar como Ejecutado</label>
                                </div>
                            </div>

                        }


                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger fade show" role="alert">
                                <strong>ERROR : </strong> @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>


                        }



                        <br>

                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn btn-info btn-group-toggle" style="background-color :lightseagreen" />
                            <a href="@Url.Action("DetalleIndividual","WebVacaciones", new { id = ViewBag.id })" class="btn btn-secondary" id="btnReturn">Retornar</a>

                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

</body>

</html>

