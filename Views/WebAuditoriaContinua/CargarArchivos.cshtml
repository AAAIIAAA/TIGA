@model WebTIGA.Models.ContenedorModelos
@{
    ViewBag.Title = "CargarArchivos";
    Layout = "~/Views/Shared/_Layout_Auditoria_Continua.cshtml";
    string Btn1 = "", btn2 = "btn btn-warning", btn3 = "btn btn-danger", btn4 = "";
}

<html>
<head>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


</head>
<body>

    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-dark">CARGAR ARCHIVOS</h6>
            </div>
            <div class="card-body card-block border-bottom-light">

                <div class="container">
                    @using (Html.BeginForm("CargarArchivos", "WebAuditoriaContinua", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                      
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h6 class="m-0 font-weight-bold text-dark">EDITAR SCRIPT</h6>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Id : </label>
                            <div class="col-md-10">
                                @Html.TextBox("IDReporte", null, new
                                {
                                    style = "text-transform:uppercase",
                                    @class = "form-control",
                                    value = "IDReporte"})
                                @Html.ValidationMessageFor(model => model.R1_DupNAB_, "", new { @class = "text-danger" })


                            </div>
                        </div>
                        <br>
                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Id : </label>
                            <div class="col-md-10">
                                @Html.TextBox("IDUser", null, new
                                {
                                    style = "text-transform:uppercase",
                                    @class = "form-control",
                                    value = "IDUser"@*, @disabled = "disabled"*@})
                                @Html.ValidationMessageFor(model => model.Persona, "", new { @class = "text-danger" })


                            </div>
                        </div>
                        <br>


                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Estado:</label>
                            <div class="col-md-10">
                                <select @Html.TextBox("Estado", null, new { @class = "form-control", placeholder = "Estado" })>
                                    @if (ViewBag.rol == 5)
                                    {
                                        if (ViewBag.Estado1 == "Pendiente")
                                        {

                                            <option selected>Pendiente</option>
                                            <option>Implementado</option>
                                            <option>Cerrado</option>

                                        }
                                        if (ViewBag.Estado1 == "Implementado")
                                        {
                                            <option>Pendiente</option>
                                            <option selected>Implementado</option>
                                            <option>Cerrado</option>
                                        }
                                        if (ViewBag.Estado1 == "Cerrado")
                                        {
                                            <option>Pendiente</option>
                                            <option>Implementado</option>
                                            <option selected>Cerrado</option>
                                        }
                                    }
                                    @if (ViewBag.rol == 0)
                                    {
                                        if (ViewBag.Estado1 == "Pendiente")
                                        {

                                            <option selected>Pendiente</option>
                                            <option>Implementado</option>
                                       

                                        }
                                        if (ViewBag.Estado1 == "Implementado")
                                        {
                                           
                                            <option selected>Implementado</option>
                                        
                                        }
                                        if (ViewBag.Estado1 == "Cerrado")
                                        {
                                         
                                            <option selected>Cerrado</option>
                                        }
                                    }




                                </select>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Detalle: </label>
                            <div class="col-md-10">
                                @Html.TextArea("Detalle", null, new { style = "text-transform:uppercase", @class = "form-control", value = "Detalle" })
                                @Html.ValidationMessageFor(model => model.R1_DupNAB_, "", new { @class = "text-danger" })


                            </div>
                        </div>
                        <br>

                        @* carga de archivos *@

                        <div class="col-lg-12 center-block">
                            <div class="card">
                                <div class="card-header" style="background-color: cadetblue;color: white;">
                                    <strong>Archivos Adjuntos </strong>
                                </div>
                                <div class="card-body card-block">
                                    <div class="container" style="text-align:center;">
                                        <div>
                                           
                                            <input class="input-file" id="my-file" type="file" name="postedFile" accept="image/*,.pdf,.xlsx,.xls" required="required">
                                            <label tabindex="0" for="my-file" class="input-file-trigger">Subir Archivo...</label>
                                            <p class="file-return"></p>
                                            <a><strong> (max 3 mb) </strong></a>

                                            <input type="hidden" id="IdItem" name="IdItem" value=Model.R1_DupNAB_.ID />
                                            <input type="submit" id="btnUpload" value="Subir" class="btn btn-warning" style="width: 80px;" />
                                            @*}*@
                                        </div>
                                    </div>


                                  

                                    <hr />
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-hover table-striped">
                                                    <tr>
                                                        <th style="text-align:center; width:50px">ID</th>
                                                        <th style="text-align:center; width:120px">Nombre de Archivo</th>
                                                        <th style="@Btn1">Operaciones</th>
                                                    </tr>
                                                    @if (Model.DAC_HistorialCambios.Count() > 0)
                                                    {

                                                        foreach (var file in Model.DAC_HistorialCambios)
                                                        {
                                                            if (file.idReporte == ViewBag.IDReporte)
                                                            {
                                                                <tr>
                                                                    <td style="text-align:center;">@file.idReporte</td>
                                                                    <td style="text-align:center;">@file.nombreArchivo</td>
                                                                    <td style="@btn4">
                                                                        <button type="button" href="javascript:;" onclick="DownloadFile(@file.idHistorico)" class="@btn2">Descargar</button> |
                                                                        <button type="button" href="javascript:;" onclick="DeleteFile(@file.idHistorico)" class="@btn3">Eliminar</button>
                                                                </tr>
                                                            }





                                                        }


                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="3" style="text-align: center;">&nbsp;No hay Archivos Adjuntos...</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>


                        @* fin carga *@




                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger fade show" role="alert">
                                <strong>ERROR : </strong> @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>


                        }


                        <br>

                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn btn-info btn-group-toggle" style="background-color :lightseagreen" />
                            <a href="@Url.Action("Reporte1_Script","WebAuditoriaContinua")" class="btn btn-danger" id="btnReturn">Salir</a>
                            @Html.ActionLink("Atras", "EditarReporte1", new { id = ViewBag.IDReporte }, new { @class = "btn btn-secondary " })

                        </div>

                    </div>
                    }
                </div>


                <div class="row">
                    <div class="col-lg-4">
                        @using (Html.BeginForm("DownloadFile", "WebAuditoriaContinua", FormMethod.Post))
                        {
                            <input type="hidden" id="hfFileId" name="fileId" />
                            <input type="submit" id="btnDownload" value="Descargar" style="display:none" />
                        }
                    </div>
                    <div class="col-lg-4">
                        @using (Html.BeginForm("DeleteFile", "WebAuditoriaContinua" ,FormMethod.Post))
                        {
                            <input type="hidden" id="VIdItem2" name="IdItem" required="required" value=@ViewBag.IDReporte />
                            <input type="hidden" id="hfFileId2" name="fileId" />
                            <input type="submit" id="btnDelete" value="Eliminar" style="display:none" />
                        }
                    </div>
                </div>

               

            </div>
        </div>
    </div>

</body>

</html>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    function DownloadFile(fileId) {
        $("#hfFileId").val(fileId);
        $("#btnDownload")[0].click();
    };
    function DeleteFile(fileId) {
        $("#hfFileId2").val(fileId);
        $("#btnDelete")[0].click();
    };
    $(function () {
        $('.input-xlarge').change(function () {
            var selectedval = $(this).val();
            $('.control-label').text(selectedval + " Station");
        });
    });
</script>
<script src="~/Adjunto_Documentos/js/index.js"></script>


