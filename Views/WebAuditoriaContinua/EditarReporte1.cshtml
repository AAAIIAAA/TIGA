
@model WebTIGA.Models.ContenedorModelos
@{
    ViewBag.Title = "EditarReporte1";
    Layout = "~/Views/Shared/_Layout_Auditoria_Continua.cshtml";
}

<html>
<head>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstr apcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


</head>
<body>

    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-dark">EDITAR SCRIPT</h6>
            </div>
            <div class="card-body card-block border-bottom-light">

                <div class="container">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h6 class="m-0 font-weight-bold text-dark">EDITAR SCRIPT</h6>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Id : </label>
                            <div class="col-md-10">
                                @Html.TextBox("ID", null, new { style = "text-transform:uppercase", @class = "form-control", value = "idScript", @disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.R1_DupNAB_, "", new { @class = "text-danger" })


                            </div>
                        </div>
                        <br>

                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Estado:</label>
                            <div class="col-md-10">
                                <select @Html.TextBox("Estado", null, new { @class = "form-control", placeholder = "Estado" })>
                                    @if (ViewBag.rol == 5)
                                    {
                                        if (ViewBag.Estado1 == "Pendiente")
                                        {

                                            <option selected>Pendiente</option>
                                            <option>Implementado</option>
                                            <option>Cerrado</option>

                                        }
                                        if (ViewBag.Estado1 == "Implementado")
                                        {
                                            <option>Pendiente</option>
                                            <option selected>Implementado</option>
                                            <option>Cerrado</option>
                                        }
                                        if (ViewBag.Estado1 == "Cerrado")
                                        {
                                            <option>Pendiente</option>
                                            <option>Implementado</option>
                                            <option selected>Cerrado</option>
                                        }
                                    }
                                    @if (ViewBag.rol == 0)
                                    {
                                        if (ViewBag.Estado1 == "Pendiente")
                                        {

                                            <option selected>Pendiente</option>
                                            <option>Implementado</option>


                                        }
                                        if (ViewBag.Estado1 == "Implementado")
                                        {

                                            <option selected>Implementado</option>

                                        }
                                        if (ViewBag.Estado1 == "Cerrado")
                                        {

                                            <option selected>Cerrado</option>
                                        }
                                    }




                                </select>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Detalle: </label>
                            <div class="col-md-10">
                                @Html.TextArea("Detalle", null, new { style = "text-transform:uppercase", @class = "form-control", value = "Detalle" })
                                @Html.ValidationMessageFor(model => model.R1_DupNAB_, "", new { @class = "text-danger" })


                            </div>
                        </div>
                        <br>




                        <div class="form-group row">
                            <label for="staticUsuario" class="col-md-2 col-form-label" style="color:black;font-weight:bold;">Archivos Adjuntos: </label>
                            <div class="col-md-10">


                                <a href="@Url.Action("CargarArchivos", new { id = ViewBag.ID })" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Ver Archivos de la Solicitud</a>

                            </div>

                        </div>
                        <br>


                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger fade show" role="alert">
                                <strong>ERROR : </strong> @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>


                        }



                        <br>

                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn btn-info btn-group-toggle" style="background-color :lightseagreen" />
                            <a href="@Url.Action("Reporte1_Script","WebAuditoriaContinua")" class="btn btn-secondary" id="btnReturn">Retornar</a>

                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

</body>

</html>


