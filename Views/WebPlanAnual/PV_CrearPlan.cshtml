@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos

<div class="container pt-3">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group mb-2 row justify-content-md-center">
            <label for="exampleFormControlInput1" class="col-md-5 col-form-label">Plan anterior: </label>
            <select class="form-control col-md-5" name="idPlanAnterior" required>
                @foreach (var Item in Model.DPA_Plan_Anual)
                {                    
                    <option value="@Item.ID_Plan_Anual">@Item.Anio_Plan</option>
                    
                }
            </select>
        </div>        

        <div class="form-group mb-2 row justify-content-md-center">
            <label for="exampleFormControlInput1" class="col-md-5 col-form-label">Año nuevo plan: </label>
            <input type="number" class="form-control col-md-5" name="anioNuevoPlan" min="@ViewBag.AnioPlanValido" value="@ViewBag.AnioPlanValido" required>
        </div>

        <div class="form-group text-center pt-3">
            <button type="button" class="btn font-weight-normal btn-outline-secondary btn-group-toggle mr-2" data-dismiss="modal">
                <i class="fas fa-times-circle"></i> Cancelar
            </button>
            <button type="submit" class="btn font-weight-normal btn-info btn-group-toggle">
                <i class="fas fa-check-circle"></i> Crear Plan
            </button>
        </div>
    }
</div>




