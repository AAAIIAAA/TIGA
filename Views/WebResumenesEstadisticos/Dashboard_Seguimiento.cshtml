@using WebTIGA;
@model WebTIGA.Models.ContenedorModelos
@{
    Layout = "~/Views/Shared/_Layout_Resumenes_Estadisticos.cshtml";
    ViewBag.Title = "Dashboard_Seguimiento";
    int? anio = ViewBag.año;
    int? mes = ViewBag.mes;
    var auditor = ViewBag.auditor;
      var equipo = ViewBag.equipo;
    var sel = "selected";
    var fecha = "";
}
    <html>
    <head>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstr apcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
        <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


    </head>
    <body>

        <div class="row">

            <div class="col-lg-12">
                <div class="card text-white bg-secondary mb-3">
                    <div class="card-header"><strong>RESULTADOS DE SEGUIMIENTO</strong></div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            <div class="row">

                                <div class="col-lg-4">

                                    Selecciona AÑO : <br />


                                    <select @Html.TextBox("año", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Año" })>


                                        @for (int i = 2017; i <= DateTime.Today.Year; i++)
                                        {

                                            if (i == anio)
                                            {
                                                <option @sel>@i</option>
                                            }
                                            else
                                            {
                                                <option>@i</option>
                                            }
                                        }


                                    </select>

                                </div>

                                <div class="col-lg-4">

                                    Selecciona MES : <br />
                                    <select @Html.TextBox("mes", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Mes" })>


                                        @for (int i = 1; i < DateTime.Today.Month; i++)
                                        {
                                            if (i == 1) { fecha = "Enero"; }
                                            if (i == 2) { fecha = "Febrero"; }
                                            if (i == 3) { fecha = "Marzo"; }
                                            if (i == 4) { fecha = "Abril"; }
                                            if (i == 5) { fecha = "Mayo"; }
                                            if (i == 6) { fecha = "Junio"; }
                                            if (i == 7) { fecha = "Julio"; }
                                            if (i == 8) { fecha = "Agosto"; }
                                            if (i == 9) { fecha = "Septiembre"; }
                                            if (i == 10) { fecha = "Octubre"; }
                                            if (i == 11) { fecha = "Noviembre"; }
                                            if (i == 12) { fecha = "diciembre"; }


                                            if (i == mes)
                                            {

                                                <option @sel>@i </option>
                                            }
                                            else
                                            {
                                                <option>@i </option>
                                            }
                                        }


                                    </select>

                                </div>
                                <div class="col-lg-2">
                                    <br />
                                    <input type="submit" id="Busqueda" value="Buscar" class="btn btn-info" style="background-color :lightseagreen" />

                                </div>


                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-8">

                <div class="card text-black-50  mb-3">
                    <div class="card ">
                        <div class="card-header">
                            <strong class="card-title">Evolutivo Vencidos</strong>
                        </div>
                        <div class="col-sm-12">
                            <div class="card-body">
                                <div class="col-sm-12">

                                    <div id="chart_div" style=" height: 500px;"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-lg-4">
                <div class="card text-black-50  mb-1">
                    <div class="card ">
                        <div class="card-header">
                            <strong class="card-title">Top Evolutivo Vencidos</strong>
                        </div>
                        <div class="col-sm-12">
                            <div class="card-body">
                                <div class="col-sm-12">

                                    <div class="table-responsive">
