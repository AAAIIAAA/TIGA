                                                    <tr>
                                                        <td>@file.AUDITOR</td>
                                                        <td>@file.CANT</td>
                                                      

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
                </br>


                <div class="col-lg-6">
                    <div class="card text-white bg-secondary mb-3">

                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                <div class="row">

                                    <div class="col-lg-4">

                                        Selecciona Auditor : <br />


                                        <select @Html.TextBox("auditor", null, new { style = "text-transform:uppercase", @class = "form-control", placeholder = "Auditor" })>


                                            @foreach (var item in Model.VIEW_WT_USUARIOS)
                                            {

                                                <option @sel>@item.Usuario</option>


                                            }

                                        </select>

                                       


                                    </div>




                                    <div class="col-lg-2">
                                        <br />
                                        <input type="submit" id="Busqueda" value="Buscar" class="btn btn-info" style="background-color :lightseagreen" />

                                    </div>


                                </div>
                            }
                        </div>
                    </div>
                </div>


                </br>
                <div class="col-lg-6">
                    <div class="card text-white bg-secondary mb-3">
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                <div class="row">

                                    <div class="col-lg-4">

                                        Selecciona Equipo : <br />
